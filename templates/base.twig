{% block html_head_container %}

{% include 'global/html-header.twig' %}
    {% block head %}
    {% endblock %}
    </head>
{% endblock %}

    <body class="{{ body_class }}" data-template="base.twig">
        {% block header %}
            <header class="global-header" role="banner">
                <h1>
                    <a href="{{ site.url }}" rel="home">{{ site.name }}</a>
                </h1>
                <nav role="navigation">
                    {% include "menu.twig" with { 'menu': menu.get_items } %}
                </nav>
            </header>
        {% endblock %}

        <main class="global-main" role="main">
            <div class="content">
                {% if title %}
                    <h2>{{ title }}</h2>
                {% endif %}

                {% block content %}
                {% endblock %}
            </div>
        </main>

        {% block footer %}
            <footer class="global-footer" role="contentinfo">
                Copyright {{ "now"|date('Y') }}
            </footer>

            {{ function('wp_footer') }}
        {% endblock %}
    </body>
</html>
