{% extends "base.twig" %}

{% block content %}
    <article class="page page--password">
        <form class="password-form" action="{{ site.site_url }}/wp-login.php?action=postpass" method="post">
            <label for="pwbox-{{ post.ID }}">Password:</label>
            <input class="password-form__input" name="post_password" id="pwbox-{{ post.ID }}" type="password" placeholder="Password" size="20" maxlength="20" />
            <input class="password-form__submit" type="submit" name="Submit" value="Submit" />
        </form>
    </article>
{% endblock %}
