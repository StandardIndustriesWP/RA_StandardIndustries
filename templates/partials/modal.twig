<div class="modal">
    <div class="modal__content">
        <span
            class="modal__focus-start"
            tabIndex="0"
        ></span>
        <button class="modal__close">
            <span class="visually-hidden">Close</span>
        </button>
        {% block modal_content %}
        {% endblock %}
        <span
            class="modal__focus-end"
            tabIndex="0"
        ></span>
    </div>
    <button class="modal__open">
        <span class="visually-hidden">Open</span>
    </button>
</div>
