{% if menu %}
    <ul class="menu__list">
        {% for item in menu %}
            <li class="menu__list-item {{ item.classes | join(' ') }}">
                <a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
                {% include "menu.twig" with { 'menu': item.get_children } %}
            </li>
        {% endfor %}
    </ul>
{% endif %}
