<header class="news">
    <div class="news__inner">
        <div class="news__eyebrow">{{ module.eyebrow }}</div>
        <h2 class="news__heading">{{ module.heading }}</h2>
        <a class="news__btn" href="{{ module.button_link }}">{{ module.button_label }}</a>
        <div class="news__items">
            {% for item in module.items %}
                <div class="news__item">
                    <a class="news__item-link" href="{{ item.post.path }}">
                        <div class="news__item-image">
                            <img
                                class="news__item-img"
                                src="{{ item.post.thumbnail.src }}"
                                srcset="{{ item.post.thumbnail.srcset }}"
                                alt="{{ item.post.thumbnail.alt }}"
                            />
                            <div class="news__item-category">{{ item.post.categories[0].name }}</div>
                        </div>
                        <h4 class="news__item-title">{{ item.post.title }}</h4>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</header>
