{% extends "base.twig" %}

{% block content %}
    <article class="page page--{{ post.post_type }}" id="page-{{ post.ID }}">
        <section class="page__body">
            <h1>{{ post.title }}</h1>
            <div class="page__content">
                {{ post.content }}
            </div>
        </section>
    </article>
{% endblock %}
