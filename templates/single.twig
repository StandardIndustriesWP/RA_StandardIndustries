{% extends 'base.twig' %}

{% block content %}
    <article class="post post-{{ post.post_type }}" id="post-{{ post.ID }}">
        <div class="post__body">
            <h1>{{ post.title }}</h1>
            <a href="{{ post.edit_link }}">{{ _e('Edit') }}</a>
            <p>
                <span>By</span>
                <a href="{{ post.author.path }}">{{ post.author.name }}</a>
                <span>{{ post.date }}</span>
            </p>
            <div class="post__content">
                {{ post.content }}
            </div>
        </div>
    </article>
{% endblock %}
