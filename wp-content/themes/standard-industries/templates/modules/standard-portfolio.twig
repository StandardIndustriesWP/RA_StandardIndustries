<section class="intro hover_transition gallery_deck standard_portfolio">

	{% if module.sec_title %}
        <div class="hover_section_title">
			<h3>{{ module.sec_title }}</h3>
        </div>
    {% endif %}
<div class="masonry-gallery">

<div class="filters filters-style-one">
	<ul class="filter-tabs filter-btns clearfix">
		<li class="active filter view_all" data-role="button" data-filter=".all">View All</li>
			{% if module.transition_items|length %}
				{% for transition_item in module.transition_items %}
				
					{% if transition_item.category_name %}
					
						<li class="filter order_by_letter" data-role="button" data-filter=".{{ transition_item.category_name  | split(' ', 4)[0] }}{% set cat_name = transition_item.category_name  | split(' ', 4) %}{% if cat_name[1] != '&' and  cat_name[1] != '' %}.{{ transition_item.category_name  | split(' ', 4)[1]}}{% endif %}">{{ transition_item.category_name}}</li>
						  
					{% endif %}  
				
				{% endfor %}
			{% endif %}
	</ul>
</div>
	
	 
<div class="outer-container row clearfix gird_area">

	{% if module.transition_items|length %}
	{% for transition_item in module.transition_items %}
	
	<div class="default-portfolio-item masonry-item all grid_single {{ transition_item.category_name }} group_{{ transition_item.grouped_item }}" data-masisotop="hover_transition">
			<div class="grid_image {{ transition_item.img_type }}">
				{% if transition_item.company_position %}
					<div class="company_pos"><img src="{{theme.link}}/images/favicon.png"> {{ transition_item.company_position }}</div>
				{% endif %}
				
				
				<img src="{{ Image(transition_item.hover_image).src('large') }}" alt="" />
			</div>
			
			<div class="grid_caption">
				<div class="caption_element">
					{% if transition_item.web_link %}
						<a href="{{ transition_item.web_link }}" target="_blank"><h2>{{ transition_item.hover_heading }}</h2> </a>
					{% else %}
						<a href="{{ transition_item.link_post.path }}" target="_blank"><h2>{{ transition_item.hover_heading }}</h2> </a>
					{% endif %}	
						
					<p>{{ transition_item.hover_description }}</p>
					<div class="arrow_right">
						{% if transition_item.web_link %}
							<a href="{{ transition_item.web_link }}" target="_blank">&#8594;</a>
						{% else %}
							<a href="{{ transition_item.link_post.path }}" target="_blank">&#8594;</a>
						{% endif %}	
						
					</div>
				</div>
			</div>
	</div>

	{% endfor %}
	{% endif %}	
	</div>	
	</div>	

</section>