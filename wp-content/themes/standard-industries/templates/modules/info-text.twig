<section class="intro intro--{{ module.type }} info_text">
    <div class="intro__inner">
        <div class="intro__content">
            <div class="intro__heading">{{ module.heading }}</div>
            {% if module.eyebrow %}
                <div class="intro__eyebrow">{{ module.eyebrow }}</div>
            {% endif %}
        </div>
    </div>
	<style type="text/css">
	.info_text p {
		font-size: 30px;
	}
	.info_text .intro__heading {
		margin-bottom: 40px;
	}
	</style>
</section>
